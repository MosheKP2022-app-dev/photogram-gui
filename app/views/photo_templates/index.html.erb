    <h1>List of photos</h1>

<form action="/insert_photo_record">
  <label for="new_image">Image</label>
  <input id="new_image" type="text" name="input_image" placeholder="Enter a URL for the image...">

  <label for="new_caption">Caption</label>
  <textarea id="new_caption" name="input_caption" placeholder="Enter a caption for the photo..."></textarea>

  <label for="new_user_id">Owner ID</label>
  <input id="new_user_id" type="text" name="input_owner_id" placeholder="Enter an ID of a User">

  <button>Add photo</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>
<%@list_of_photos.each do |photo|%>
  <tr>
    <td>
      <img src="<%=photo.image%>">
    </td>

    <td>
      <%=photo.caption%>
    </td>

    <td>
      <%=photo.poster.username%>
    </td>

    <td>
      <%=photo.created_at%>
    </td>

    <td>
      <a href="/photos/<%=photo.id%>">
        Show details
      </a>
    </td>
  </tr>
  <%end%>
  </table>